<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="section_title text-center">
        <h3>Editar actividades</h3>
      </div>

      <form class="form-contact contact_form" id="contactForm">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <label for="date">Elige una fecha:</label>
              <input class="form-control valid" name="date" id="date" type="date" placeholder="Fecha" />
            </div>
          </div>

          <div class="col-sm-12 input-group-icon mt-10">
            <label for="jornada">Jornada</label>

            <div class="form-select" id="default-select">
              <select id="jornada" name="jornada">
                <option value="manana">Mañana</option>
                <option value="tarde">Tarde</option>
              </select>
            </div>
          </div>

          <div class="col-sm-12">
            <div class="form-group">
              <label for="Actividad1">Actividad 1</label>
              <input class="form-control valid" name="Actividad1" id="Actividad1" type="text"
                placeholder="Describe la actividad 1" />
            </div>
          </div>

          <div class="col-sm-12">
            <div class="form-group">
              <label for="Actividad2">Actividad 2 </label>
              <input class="form-control valid" name="Actividad2" id="Actividad2" type="text"
                placeholder="Describe la actividad 2" />
            </div>
          </div>

          <div class="col-sm-12">
            <div class="form-group">
              <label for="Actividad3">Actividad 3</label>
              <input class="form-control valid" name="Actividad3" id="Actividad3" type="text"
                placeholder="Describe la actividad 3" />
            </div>
          </div>

          <div class="col-sm-12">
            <div class="form-group">
              <label for="Actividad4">Actividad 4</label>
              <input class="form-control valid" name="Actividad4" id="Actividad4" type="text"
                placeholder="Describe la actividad 4" />
            </div>
          </div>
        </div>
        <div class="form-group mt-3">
          <button type="submit" class="button button-contactForm boxed-btn">
            Confirmar edición
          </button>
        </div>
      </form>
    </div>
  </div>
</div>